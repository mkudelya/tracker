{% extends "TwigBundle::layout.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/tracker/css/main.css') }}" />
{% endblock %}

{% block title 'Tracking Bundle' %}

{% block body %}
    {% block content_header %}
        <ul id="menu">
            {% block content_header_more %}
                {% if app.user and app.user.hasRole('ADMINISTRATOR') %}
                    <li>[ <a href="{{ path('_tracking_user_list') }}">Users list</a> ]</li>
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li>[ <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a> ]</li>
                    <li>[ <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a> ]</li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                {% endif %}
            {% endblock %}
        </ul>

        <div style="clear: both"></div>
    {% endblock %}

    <div class="block">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-message">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="page_description">{% block page_description %}{% endblock %}</div>

        {% block content %}{% endblock %}
        {% block fos_user_content %}{% endblock fos_user_content %}
    </div>

    {% if code is defined %}
        <h2>Code behind this page</h2>
        <div class="block">
            <div class="symfony-content">{{ code|raw }}</div>
        </div>
    {% endif %}
{% endblock %}
